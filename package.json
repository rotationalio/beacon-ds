{
  "name": "beacon-ds",
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --quiet --no-error-on-unmatched-pattern packages/**/*{js,jsx,ts,tsx}",
    "build": "yarn build:token && yarn build:core ",
    "build:core": "yarn workspace @rotationalio/beacon-core build",
    "build:token": "yarn workspace @rotationalio/beacon-foundation build",
    "storybook": "yarn workspace @rotationalio/beacon-storybook storybook",
    "docs": "yarn workspace @rotationalio/beacon-docs build",
    "dev:docs": "yarn workspace @rotationalio/beacon-docs dev",
    "start:docs": "yarn workspace @rotationalio/beacon-docs start",
    "changeset": "changeset",
    "prerelease": "yarn run build && yarn run test",
    "release": "yarn run prerelease && changeset publish",
    "test": "yarn workspace @rotationalio/beacon-core test"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.24.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@reach/menu-button": "^0.18.0",
    "class-variance-authority": "^0.4.0",
    "react-aria": "^3.22.0",
    "react-stately": "^3.20.0"
  }
}
