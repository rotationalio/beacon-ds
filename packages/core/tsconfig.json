{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./lib",
    "downlevelIteration": true,
    "target": "ES2022",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }

  },
  "include": ["./src", "./__tests__", "src/types"],
  "exclude": ["./node_modules"]
}
